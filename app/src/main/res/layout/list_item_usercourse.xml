<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/list_course_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/list_course_sample_shortname"
        android:src="@drawable/icon_course" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/list_course_icon"
        android:orientation="vertical"
        android:padding="3dp"
        android:weightSum="2" >

        <TextView
            android:id="@+id/list_course_shortname"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/list_course_sample_shortname"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/list_course_fullname"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/list_course_sample_fullname"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>