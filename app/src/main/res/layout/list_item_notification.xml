<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/clickable_card"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/list_notification_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/list_course_sample_shortname"
                android:src="@drawable/icon_notifications_color" />

            <TextView
                android:id="@+id/list_notification_title"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/list_notification_icon"
                android:gravity="start|center_vertical"
                android:padding="3dp"
                android:text="@string/list_course_sample_shortname"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/list_notification_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:padding="3dp"
            android:text="@string/list_course_sample_fullname"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>