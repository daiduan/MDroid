<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey14"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/clickable_card"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:contentDescription="@string/sample_contact_name"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/feature_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_plusone_red" />

            <LinearLayout
                android:id="@+id/feature_votes_layout"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/feature_votescasted"
                    android:layout_width="wrap_content"
                    android:layout_height="19.5dp"
                    android:text="0"
                    android:textColor="@color/grey3"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey13" >
                </LinearLayout>

                <TextView
                    android:id="@+id/feature_votestarget"
                    android:layout_width="wrap_content"
                    android:layout_height="19.5dp"
                    android:text="25"
                    android:textColor="@color/grey3"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/feature_name"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_toLeftOf="@id/feature_votes_layout"
                android:layout_toRightOf="@id/feature_image"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="@string/sample_contact_name"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/feature_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="@string/sample_sectionname"
            android:textColor="@color/grey4"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>