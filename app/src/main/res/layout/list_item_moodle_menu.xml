<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/nav_menuicon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="8dp"
        android:contentDescription="@string/list_item_sample_menu"
        android:paddingLeft="16dp"
        android:src="@drawable/icon_school_greyscale" />

    <TextView
        android:id="@+id/nav_menuitem"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="start|center_vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="16dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="@string/list_item_sample_menu"
        android:textColor="@color/left_menu_text"
        android:textSize="16sp" />

</LinearLayout>